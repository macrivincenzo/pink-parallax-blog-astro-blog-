    const netIncome = parseFloat(document.getElementById('netIncome').value) || 0;
    const ownerSalary = parseFloat(document.getElementById('ownerSalary').value) || 0;
    const initialInvestment = parseFloat(document.getElementById('initialInvestment').value) || 0;
    const franchiseType = document.getElementById('franchiseType').value;
    const yearsInOperation = parseInt(document.getElementById('yearsInOperation').value) || 0;
    const territoryType = document.getElementById('territoryType').value;

    // Calculate total earnings (similar to SDE for medical practices)
    const totalEarnings = netIncome + ownerSalary;

    // Calculate ROI
    const roi = initialInvestment > 0 ? ((totalEarnings / initialInvestment) * 100) : 0;

    // Industry multiples by franchise type
    const franchiseMultiples = {
      'qsr': 3.2,
      'fitness': 4.0,
      'automotive': 4.8,
      'education': 5.5,
      'home-services': 5.2,
      'retail': 3.0,
      'business-services': 6.0,
      'health-wellness': 4.8,
      'senior-care': 5.5,
      'other': 3.5
    };

    // Get base multiple
    const baseMultiple = franchiseMultiples[franchiseType] || 3.5;

    // Calculate base valuation
    const baseValuation = totalEarnings * baseMultiple;

    // Performance adjustments based on ROI
    let performanceAdjustment = 0;
    if (roi > 30) performanceAdjustment = baseValuation * 0.15;
    else if (roi > 20) performanceAdjustment = baseValuation * 0.1;
    else if (roi < 10) performanceAdjustment = baseValuation * -0.1;

    // Territory adjustments
    let locationAdjustment = 0;
    if (territoryType === 'urban') locationAdjustment = baseValuation * 0.1;
    else if (territoryType === 'suburban') locationAdjustment = baseValuation * 0.05;
    else if (territoryType === 'rural') locationAdjustment = baseValuation * -0.05;

    // Maturity adjustments
    let maturityAdjustment = 0;
    if (yearsInOperation >= 10) maturityAdjustment = baseValuation * 0.1;
    else if (yearsInOperation >= 5) maturityAdjustment = baseValuation * 0.05;
    else if (yearsInOperation < 3) maturityAdjustment = baseValuation * -0.1;

    // Calculate total value
    const totalValue = baseValuation + performanceAdjustment + locationAdjustment + maturityAdjustment;

    // Display results
    document.getElementById('roiResult').textContent = roi.toFixed(1) + '%';
    document.getElementById('multipleResult').textContent = baseMultiple.toFixed(1) + 'x';
    document.getElementById('baseValuationResult').textContent = '$' + baseValuation.toLocaleString();
    document.getElementById('performanceAdjustmentResult').textContent = '$' + performanceAdjustment.toLocaleString();
    document.getElementById('locationAdjustmentResult').textContent = '$' + locationAdjustment.toLocaleString();
    document.getElementById('maturityAdjustmentResult').textContent = '$' + maturityAdjustment.toLocaleString();
    document.getElementById('totalValueResult').textContent = '$' + totalValue.toLocaleString();

    // Show results
    document.getElementById('calculationResults').style.display = 'block';
  }

