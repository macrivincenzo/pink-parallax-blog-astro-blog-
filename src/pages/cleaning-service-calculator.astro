const description = "Calculate your cleaning service business worth with our 2025 SDE analysis calculator. Get accurate maid service valuation using proven industry multiples and benchmarks.";
---

<MainLayout title={title} description={description}>
    <div class="article-header" style="background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%); color: white; padding: 40px 20px; text-align: center; border-radius: 10px; margin-bottom: 30px;">
        <h1>Cleaning Service Valuation Calculator 2025</h1>
        <p>Complete SDE Analysis & Worth Assessment | Professional Maid Service Business Valuation</p>
    </div>

    <div class="calculator-box" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 30px; border-radius: 10px; text-align: center; margin: 30px 0;">
        <h2>Get Your FREE Cleaning Service Valuation Now!</h2>
        <p>Calculate your cleaning business worth in under 5 minutes using our proven SDE methodology.</p>
        <a href="https://thevaluationgenie.com/" class="cta-button">Calculate My Cleaning Service Value</a>
