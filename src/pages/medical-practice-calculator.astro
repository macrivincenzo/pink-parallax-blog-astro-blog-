  function calculateMedicalPracticeValue() {
    // Get form values
    const annualRevenue = parseFloat(document.getElementById('annualRevenue').value) || 0;
    const netIncome = parseFloat(document.getElementById('netIncome').value) || 0;
    const ownerSalary = parseFloat(document.getElementById('ownerSalary').value) || 0;
    const discretionaryExpenses = parseFloat(document.getElementById('discretionaryExpenses').value) || 0;
    const specialty = document.getElementById('specialty').value;
    const patientCount = parseInt(document.getElementById('patientCount').value) || 0;
    const yearsInBusiness = parseInt(document.getElementById('yearsInBusiness').value) || 0;
    const location = document.getElementById('location').value;

    // Calculate SDE
    const sde = netIncome + ownerSalary + discretionaryExpenses;

    // Determine multiple based on specialty and other factors
    let baseMultiple = 2.0; // Default for primary care

    const specialtyMultiples = {
      'primary-care': 2.0,
      'cardiology': 2.8,
      'dermatology': 3.2,
      'orthopedics': 2.5,
      'pediatrics': 2.3,
      'obstetrics': 2.4,
      'psychiatry': 2.7,
      'other': 2.2
    };

    baseMultiple = specialtyMultiples[specialty] || 2.0;

    // Adjust for location
    const locationAdjustments = {
      'urban': 1.1,
      'suburban': 1.0,
      'rural': 0.9
    };

    const locationMultiplier = locationAdjustments[location] || 1.0;
    const adjustedMultiple = baseMultiple * locationMultiplier;

    // Adjust for practice maturity
    let maturityAdjustment = 1.0;
    if (yearsInBusiness < 3) maturityAdjustment = 0.8;
    else if (yearsInBusiness > 15) maturityAdjustment = 1.1;

    const finalMultiple = adjustedMultiple * maturityAdjustment;

    // Calculate valuation
    const valuation = sde * finalMultiple;

    // Calculate valuation range
    const lowValuation = valuation * 0.85;
    const highValuation = valuation * 1.15;

    // Display results
    const resultDiv = document.getElementById('calculationResult');
    const resultContent = document.getElementById('resultContent');

    resultContent.innerHTML = `
