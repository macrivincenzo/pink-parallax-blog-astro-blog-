<script>
  function calculateMedicalPracticeValue() {
    // Get form values
    const annualRevenue = parseFloat(document.getElementById('annualRevenue').value) || 0;
    const netIncome = parseFloat(document.getElementById('netIncome').value) || 0;
    const ownerSalary = parseFloat(document.getElementById('ownerSalary').value) || 0;
    const discretionaryExpenses = parseFloat(document.getElementById('discretionaryExpenses').value) || 0;
    const medicalSpecialty = document.getElementById('medicalSpecialty').value;
    const activePatients = parseInt(document.getElementById('activePatients').value) || 0;
    const yearsInBusiness = parseInt(document.getElementById('yearsInBusiness').value) || 0;
    const locationType = document.getElementById('locationType').value;

    // Calculate SDE
    const sde = netIncome + ownerSalary + discretionaryExpenses;

    // Industry multiples by specialty
    const specialtyMultiples = {
      'primary-care': 3.2,
      'cardiology': 4.2,
      'orthopedics': 4.8,
      'dermatology': 5.5,
      'ophthalmology': 5.2,
      'gastroenterology': 4.5,
      'urology': 4.0,
      'psychiatry': 3.8,
      'pediatrics': 3.5,
      'obstetrics': 4.2,
      'neurology': 4.0,
      'oncology': 4.5,
      'anesthesiology': 4.0,
      'radiology': 4.2,
      'emergency-medicine': 3.8,
      'other': 3.5
    };

    // Get base multiple
    const baseMultiple = specialtyMultiples[medicalSpecialty] || 3.5;

    // Calculate base valuation
    const baseValuation = sde * baseMultiple;

    // Specialty adjustments
    let specialtyAdjustment = 0;
    if (medicalSpecialty === 'dermatology') specialtyAdjustment = baseValuation * 0.1;
    else if (medicalSpecialty === 'cardiology' || medicalSpecialty === 'orthopedics') specialtyAdjustment = baseValuation * 0.05;

    // Location adjustments
    let locationAdjustment = 0;
    if (locationType === 'urban') locationAdjustment = baseValuation * 0.1;
    else if (locationType === 'suburban') locationAdjustment = baseValuation * 0.05;
    else if (locationType === 'rural') locationAdjustment = baseValuation * -0.05;

    // Maturity adjustments
    let maturityAdjustment = 0;
    if (yearsInBusiness >= 10) maturityAdjustment = baseValuation * 0.1;
    else if (yearsInBusiness >= 5) maturityAdjustment = baseValuation * 0.05;
    else if (yearsInBusiness < 3) maturityAdjustment = baseValuation * -0.1;

    // Calculate total value
    const totalValue = baseValuation + specialtyAdjustment + locationAdjustment + maturityAdjustment;

    // Display results
    document.getElementById('sdeResult').textContent = '$' + sde.toLocaleString();
    document.getElementById('multipleResult').textContent = baseMultiple.toFixed(1) + 'x';
    document.getElementById('baseValuationResult').textContent = '$' + baseValuation.toLocaleString();
    document.getElementById('specialtyAdjustmentResult').textContent = '$' + specialtyAdjustment.toLocaleString();
    document.getElementById('locationAdjustmentResult').textContent = '$' + locationAdjustment.toLocaleString();
    document.getElementById('maturityAdjustmentResult').textContent = '$' + maturityAdjustment.toLocaleString();
    document.getElementById('totalValueResult').textContent = '$' + totalValue.toLocaleString();

    // Show results
    document.getElementById('calculationResults').style.display = 'block';
  }

  // Add event listener
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('medicalPracticeCalculator');
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        calculateMedicalPracticeValue();
      });
    }
  });
</script>