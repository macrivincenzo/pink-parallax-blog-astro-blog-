---
export interface Props {
  industry: {
    id: string;
    name: string;
    title: string;
    description: string;
    keywords: string;
    multiple_range: { min: number; max: number };
    characteristics: string[];
    key_factors: string[];
  }
}

const { industry } = Astro.props;
const canonicalURL = new URL(`/${industry.id}-valuation-calculator`, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{industry.title} | TheValuationGenie</title>
    <meta name="description" content={industry.description}>
    <meta name="keywords" content={industry.keywords}>
    <meta name="robots" content="index, follow">
    <meta name="author" content="TheValuationGenie">
    <link rel="canonical" href={canonicalURL}>
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={industry.title}>
    <meta property="og:description" content={industry.description}>
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="TheValuationGenie">
    <meta property="og:image" content={`https://thevaluationgenie.com/images/${industry.id}-valuation-calculator.jpg`}>
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={industry.title}>
    <meta name="twitter:description" content={industry.description}>
    <meta name="twitter:image" content={`https://thevaluationgenie.com/images/${industry.id}-valuation-calculator.jpg`}>
    
    <!-- Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
            {
                "@type": "WebPage",
                "@id": canonicalURL.toString(),
                "url": canonicalURL.toString(),
                "name": industry.title,
                "description": industry.description,
                "datePublished": "2025-01-15T10:00:00+00:00",
                "dateModified": "2025-01-15T10:00:00+00:00",
                "inLanguage": "en-US",
                "isPartOf": {
                    "@type": "WebSite",
                    "@id": "https://thevaluationgenie.com",
                    "name": "TheValuationGenie",
                    "url": "https://thevaluationgenie.com"
                },
                "breadcrumb": {
                    "@type": "BreadcrumbList",
                    "itemListElement": [
                        {
                            "@type": "ListItem",
                            "position": 1,
                            "name": "Home",
                            "item": "https://thevaluationgenie.com"
                        },
                        {
                            "@type": "ListItem",
                            "position": 2,
                            "name": "Calculators",
                            "item": "https://thevaluationgenie.com/calculators"
                        },
                        {
                            "@type": "ListItem",
                            "position": 3,
                            "name": `${industry.name} Calculator`
                        }
                    ]
                }
            },
            {
                "@type": "SoftwareApplication",
                "name": `${industry.name} Valuation Calculator`,
                "applicationCategory": "BusinessApplication",
                "operatingSystem": "Web Browser",
                "offers": {
                    "@type": "Offer",
                    "price": "0",
                    "priceCurrency": "USD"
                }
            }
        ]
    })}>
    </script>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: white;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 40px 0;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            border-radius: 10px;
            margin: -20px -20px 40px -20px;
        }
        
        h1 {
            font-size: 2.5em;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .subtitle {
            font-size: 1.2em;
            opacity: 0.9;
            font-weight: 300;
        }
        
        h2 {
            color: #1e3c72;
            border-bottom: 3px solid #2a5298;
            padding-bottom: 10px;
            margin: 30px 0 20px 0;
            font-size: 1.8em;
        }
        
        h3 {
            color: #2a5298;
            margin: 25px 0 15px 0;
            font-size: 1.4em;
        }
        
        .calculator-section {
            background: linear-gradient(135deg, #f8f9ff 0%, #e8f0ff 100%);
            padding: 30px;
            border-radius: 15px;
            margin: 30px 0;
            border: 2px solid #2a5298;
            box-shadow: 0 5px 15px rgba(42, 82, 152, 0.1);
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #1e3c72;
        }
        
        input, select {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        
        input:focus, select:focus {
            outline: none;
            border-color: #2a5298;
            box-shadow: 0 0 10px rgba(42, 82, 152, 0.2);
        }
        
        .calculate-btn {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            width: 100%;
            margin: 20px 0;
        }
        
        .calculate-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(42, 82, 152, 0.4);
        }
        
        .results {
            background: linear-gradient(135deg, #e8f5e8 0%, #d4edda 100%);
            padding: 25px;
            border-radius: 10px;
            margin: 20px 0;
            border: 2px solid #28a745;
            display: none;
        }
        
        .result-item {
            margin: 15px 0;
            padding: 15px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .result-value {
            font-size: 1.4em;
            font-weight: bold;
            color: #28a745;
        }
        
        .cta-section {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            margin: 40px 0;
        }
        
        .cta-btn {
            background: white;
            color: #ff6b6b;
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.3s;
            text-decoration: none;
            display: inline-block;
            margin: 10px;
        }
        
        .cta-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .info-box {
            background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
            padding: 20px;
            border-radius: 10px;
            border-left: 5px solid #17a2b8;
            margin: 20px 0;
        }
        
        .highlight-box {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            padding: 20px;
            border-radius: 10px;
            border-left: 5px solid #f39c12;
            margin: 20px 0;
        }
        
        .breadcrumb {
            margin-bottom: 20px;
            padding: 10px 0;
            color: #666;
        }
        
        .breadcrumb a {
            color: #2a5298;
            text-decoration: none;
        }
        
        .breadcrumb a:hover {
            text-decoration: underline;
        }
        
        ul, ol {
            margin: 15px 0;
            padding-left: 30px;
        }
        
        li {
            margin: 8px 0;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 15px;
                margin: 10px;
            }
            
            h1 {
                font-size: 2em;
            }
            
            .header {
                padding: 30px 20px;
                margin: -15px -15px 30px -15px;
            }
            
            .calculator-section, .cta-section {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="breadcrumb">
            <a href="https://thevaluationgenie.com">Home</a> > 
            <a href="https://thevaluationgenie.com/calculators">Calculators</a> > 
            {industry.name} Calculator
        </nav>
        
        <header class="header">
            <h1>{industry.name} Valuation Calculator</h1>
            <p class="subtitle">Professional {industry.name.toLowerCase()} valuation using SDE methodology and industry multiples</p>
        </header>
        
        <section class="calculator-section">
            <h2>🧮 Free {industry.name} Valuation Calculator</h2>
            <p>Calculate your {industry.name.toLowerCase()}'s worth using our professional SDE-based valuation methodology. Get instant estimates based on industry-specific multiples ranging from {industry.multiple_range.min}x to {industry.multiple_range.max}x SDE.</p>
            
            <div class="form-group">
                <label for="annual-revenue">Annual Gross Revenue ($)</label>
                <input type="number" id="annual-revenue" placeholder="Enter annual revenue">
            </div>
            
            <div class="form-group">
                <label for="owner-salary">Owner's Salary/Draws ($)</label>
                <input type="number" id="owner-salary" placeholder="Enter owner compensation">
            </div>
            
            <div class="form-group">
                <label for="operating-expenses">Annual Operating Expenses ($)</label>
                <input type="number" id="operating-expenses" placeholder="Enter total expenses">
            </div>
            
            <div class="form-group">
                <label for="years-established">Years Established</label>
                <input type="number" id="years-established" placeholder="Years in business">
            </div>
            
            <div class="form-group">
                <label for="growth-rate">Annual Growth Rate (%)</label>
                <input type="number" id="growth-rate" placeholder="Average annual growth">
            </div>
            
            <button class="calculate-btn" onclick="calculateValue()">Calculate {industry.name} Value</button>
            
            <div id="results" class="results">
                <h3>🎯 Your {industry.name} Valuation Results</h3>
                <div class="result-item">
                    <strong>Seller's Discretionary Earnings (SDE):</strong>
                    <div class="result-value" id="sde-result">$0</div>
                </div>
                <div class="result-item">
                    <strong>Estimated Business Value Range:</strong>
                    <div class="result-value" id="value-range">$0 - $0</div>
                </div>
                <div class="result-item">
                    <strong>Industry Multiple Applied:</strong>
                    <div class="result-value" id="multiple-applied">{industry.multiple_range.min}x - {industry.multiple_range.max}x SDE</div>
                </div>
            </div>
        </section>
        
        <div class="cta-section">
            <h3>🎯 Want a Professional {industry.name} Valuation Report?</h3>
            <p>Get a comprehensive 25-page professional valuation report with detailed analysis, market comparisons, and actionable recommendations for just $39!</p>
            <a href="#" class="cta-btn">Get Professional Report - $39</a>
            <a href="#" class="cta-btn">Schedule Consultation</a>
        </div>
        
        <section>
            <h2>🎓 Understanding {industry.name} Valuation</h2>
            <p>{industry.name} valuation requires specialized knowledge of industry-specific factors that affect business worth. Our {industry.name.toLowerCase()} valuation calculator uses the Seller's Discretionary Earnings (SDE) methodology, which is the gold standard for small to medium-sized business valuations.</p>
            
            <div class="highlight-box">
                <h4>💡 Key Insight</h4>
                <p>{industry.name} businesses typically sell for {industry.multiple_range.min}x to {industry.multiple_range.max}x SDE, with variations based on specific business characteristics and market conditions.</p>
            </div>
            
            <h3>Key {industry.name} Characteristics</h3>
            <ul>
                {industry.characteristics.map(characteristic => (
                    <li><strong>{characteristic.split(':')[0] || characteristic}:</strong> {characteristic.split(':')[1] || ''}</li>
                ))}
            </ul>
            
            <h3>Primary Valuation Factors</h3>
            <ul>
                {industry.key_factors.map(factor => (
                    <li><strong>{factor}</strong></li>
                ))}
            </ul>
        </section>
        
        <section>
            <h2>📊 {industry.name} Valuation Methodology</h2>
            
            <div class="info-box">
                <h4>SDE Calculation Formula</h4>
                <p><strong>SDE = Net Income + Owner Salary/Draws + Owner Benefits + Non-Essential Expenses + Depreciation + Interest</strong></p>
            </div>
            
            <p>The SDE methodology is particularly effective for {industry.name.toLowerCase()} valuation because it captures the true earning potential of the business by adjusting for owner-specific expenses and benefits.</p>
            
            <h3>Why Choose Professional Valuation?</h3>
            <ul>
                <li><strong>Accurate Market Analysis:</strong> Compare your business to recent {industry.name.toLowerCase()} sales</li>
                <li><strong>Industry Expertise:</strong> Specialized knowledge of {industry.name.toLowerCase()} valuation factors</li>
                <li><strong>Detailed Documentation:</strong> Professional reports suitable for transactions and legal purposes</li>
                <li><strong>Strategic Insights:</strong> Recommendations for increasing your business value</li>
            </ul>
        </section>
        
        <div class="cta-section">
            <h3>🚀 Ready to Maximize Your {industry.name} Value?</h3>
            <p>Take the next step with our comprehensive professional valuation services. Get expert analysis and strategic recommendations to optimize your business value.</p>
            <a href="#" class="cta-btn">Order Professional Report - $39</a>
            <a href="#" class="cta-btn">Schedule Free Consultation</a>
            <a href="#" class="cta-btn">Explore More Calculators</a>
        </div>
        
        <footer style="margin-top: 40px; padding: 30px 0; border-top: 2px solid #eee; text-align: center; color: #666;">
            <p>&copy; 2025 TheValuationGenie. All rights reserved. | <a href="#" style="color: #2a5298;">Privacy Policy</a> | <a href="#" style="color: #2a5298;">Terms of Service</a> | <a href="#" style="color: #2a5298;">Contact Us</a></p>
        </footer>
    </div>
    
    <script define:vars={{ industry }}>
        function calculateValue() {
            const revenue = parseFloat(document.getElementById('annual-revenue').value) || 0;
            const ownerSalary = parseFloat(document.getElementById('owner-salary').value) || 0;
            const expenses = parseFloat(document.getElementById('operating-expenses').value) || 0;
            const yearsEstablished = parseFloat(document.getElementById('years-established').value) || 0;
            const growthRate = parseFloat(document.getElementById('growth-rate').value) || 0;
            
            if (revenue <= 0 || expenses < 0) {
                alert('Please enter valid revenue and expense amounts.');
                return;
            }
            
            const netIncome = revenue - expenses;
            const sde = netIncome + ownerSalary;
            
            let minMultiple = industry.multiple_range.min;
            let maxMultiple = industry.multiple_range.max;
            
            // Adjust multiples based on business factors
            if (yearsEstablished > 10) {
                minMultiple *= 1.1;
                maxMultiple *= 1.1;
            } else if (yearsEstablished < 3) {
                minMultiple *= 0.9;
                maxMultiple *= 0.9;
            }
            
            if (growthRate > 20) {
                minMultiple *= 1.2;
                maxMultiple *= 1.2;
            } else if (growthRate < 0) {
                minMultiple *= 0.8;
                maxMultiple *= 0.8;
            }
            
            const minValue = sde * minMultiple;
            const maxValue = sde * maxMultiple;
            
            document.getElementById('sde-result').textContent = '$' + sde.toLocaleString();
            document.getElementById('value-range').textContent = '$' + Math.round(minValue).toLocaleString() + ' - $' + Math.round(maxValue).toLocaleString();
            
            document.getElementById('results').style.display = 'block';
            document.getElementById('results').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>
