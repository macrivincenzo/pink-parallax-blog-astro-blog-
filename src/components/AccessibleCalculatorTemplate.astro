---
export interface Props {
  industry: {
    id: string;
    name: string;
    title: string;
    description: string;
    keywords: string;
    multiple_range: { min: number; max: number };
    characteristics: string[];
    key_factors: string[];
  }
}

const { industry } = Astro.props;
const canonicalURL = new URL(`/${industry.id}-valuation-calculator`, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{industry.title} | TheValuationGenie</title>
    <meta name="description" content={industry.description}>
    <meta name="keywords" content={industry.keywords}>
    <meta name="robots" content="index, follow">
    <meta name="author" content="TheValuationGenie">
    <link rel="canonical" href={canonicalURL}>
    
    <!-- Accessibility & Performance optimizations -->
    <meta name="theme-color" content="#1e3c72">
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="dns-prefetch" href="//thevaluationgenie.com">
    
    <!-- Critical CSS for LCP optimization -->
    <style>
        *{margin:0;padding:0;box-sizing:border-box}
        body{font-family:'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;line-height:1.6;color:#333;background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);min-height:100vh}
        .container{max-width:1200px;margin:0 auto;padding:20px;background:#fff;box-shadow:0 0 20px rgba(0,0,0,.1);margin-top:20px;margin-bottom:20px;border-radius:10px}
        .header{text-align:center;margin-bottom:40px;padding:40px 0;background:linear-gradient(135deg,#1e3c72 0%,#2a5298 100%);color:#fff;border-radius:10px;margin:-20px -20px 40px -20px}
        h1{font-size:2.5em;margin-bottom:15px;text-shadow:2px 2px 4px rgba(0,0,0,.3)}
        .subtitle{font-size:1.2em;opacity:.9;font-weight:300}
        .skip-link{position:absolute;top:-40px;left:6px;background:#1e3c72;color:#fff;padding:8px;text-decoration:none;border-radius:4px;z-index:1000}
        .skip-link:focus{top:6px}
        .sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0}
    </style>
    
    <!-- Load non-critical CSS asynchronously -->
    <link rel="preload" href="/styles/calculator.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="/styles/calculator.css"></noscript>
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={industry.title}>
    <meta property="og:description" content={industry.description}>
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="TheValuationGenie">
    <meta property="og:image" content={`https://thevaluationgenie.com/images/${industry.id}-calculator-og.webp`}>
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={industry.title}>
    <meta name="twitter:description" content={industry.description}>
    <meta name="twitter:image" content={`https://thevaluationgenie.com/images/${industry.id}-calculator-twitter.webp`}>
    
    <!-- Optimized Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebPage",
        "@id": canonicalURL.toString(),
        "url": canonicalURL.toString(),
        "name": industry.title,
        "description": industry.description,
        "datePublished": "2025-01-15T10:00:00+00:00",
        "dateModified": "2025-01-15T10:00:00+00:00",
        "inLanguage": "en-US",
        "mainEntity": {
            "@type": "SoftwareApplication",
            "name": `${industry.name} Valuation Calculator`,
            "applicationCategory": "BusinessApplication",
            "operatingSystem": "Web Browser",
            "offers": {
                "@type": "Offer",
                "price": "0",
                "priceCurrency": "USD"
            }
        },
        "breadcrumb": {
            "@type": "BreadcrumbList",
            "itemListElement": [
                {
                    "@type": "ListItem",
                    "position": 1,
                    "name": "Home",
                    "item": "https://thevaluationgenie.com"
                },
                {
                    "@type": "ListItem",
                    "position": 2,
                    "name": "Calculators",
                    "item": "https://thevaluationgenie.com/calculators"
                },
                {
                    "@type": "ListItem",
                    "position": 3,
                    "name": `${industry.name} Calculator`
                }
            ]
        }
    })}>
    </script>
</head>
<body>
    <!-- Skip to main content link for screen readers -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <div class="container">
        <!-- Accessible breadcrumb navigation -->
        <nav aria-label="Breadcrumb navigation" class="breadcrumb">
            <ol itemscope itemtype="https://schema.org/BreadcrumbList">
                <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a href="https://thevaluationgenie.com" itemprop="item">
                        <span itemprop="name">Home</span>
                    </a>
                    <meta itemprop="position" content="1" />
                </li>
                <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a href="https://thevaluationgenie.com/calculators" itemprop="item">
                        <span itemprop="name">Calculators</span>
                    </a>
                    <meta itemprop="position" content="2" />
                </li>
                <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem" aria-current="page">
                    <span itemprop="name">{industry.name} Calculator</span>
                    <meta itemprop="position" content="3" />
                </li>
            </ol>
        </nav>
        
        <header class="header" role="banner">
            <h1 id="page-title">{industry.name} Valuation Calculator</h1>
            <p class="subtitle">Professional {industry.name.toLowerCase()} valuation using SDE methodology</p>
        </header>
        
        <main id="main-content" role="main">
            <section class="calculator-section" aria-labelledby="calculator-heading">
                <h2 id="calculator-heading">ðŸ§® Free {industry.name} Valuation Calculator</h2>
                <p>Calculate your {industry.name.toLowerCase()}'s worth using our professional SDE-based methodology. Get instant estimates with industry multiples from {industry.multiple_range.min}x to {industry.multiple_range.max}x SDE.</p>
                
                <!-- Accessible form with proper labels and ARIA -->
                <form id="calculator-form" role="form" aria-labelledby="calculator-heading" novalidate>
                    <fieldset>
                        <legend class="sr-only">Business Financial Information</legend>
                        
                        <div class="form-group">
                            <label for="annual-revenue" class="required">
                                Annual Gross Revenue ($)
                                <span aria-label="required field">*</span>
                            </label>
                            <input 
                                type="number" 
                                id="annual-revenue" 
                                name="annual-revenue"
                                placeholder="Enter annual revenue" 
                                required 
                                min="0" 
                                step="1000"
                                aria-describedby="revenue-help"
                                aria-invalid="false"
                            >
                            <div id="revenue-help" class="help-text">Enter your total annual gross revenue in dollars</div>
                        </div>
                        
                        <div class="form-group">
                            <label for="owner-salary" class="required">
                                Owner's Salary/Draws ($)
                                <span aria-label="required field">*</span>
                            </label>
                            <input 
                                type="number" 
                                id="owner-salary" 
                                name="owner-salary"
                                placeholder="Enter owner compensation" 
                                required 
                                min="0" 
                                step="1000"
                                aria-describedby="salary-help"
                                aria-invalid="false"
                            >
                            <div id="salary-help" class="help-text">Include salary, draws, and owner benefits</div>
                        </div>
                        
                        <div class="form-group">
                            <label for="operating-expenses" class="required">
                                Annual Operating Expenses ($)
                                <span aria-label="required field">*</span>
                            </label>
                            <input 
                                type="number" 
                                id="operating-expenses" 
                                name="operating-expenses"
                                placeholder="Enter total expenses" 
                                required 
                                min="0" 
                                step="1000"
                                aria-describedby="expenses-help"
                                aria-invalid="false"
                            >
                            <div id="expenses-help" class="help-text">Total annual operating expenses excluding owner compensation</div>
                        </div>
                        
                        <div class="form-group">
                            <label for="years-established">Years Established</label>
                            <input 
                                type="number" 
                                id="years-established" 
                                name="years-established"
                                placeholder="Years in business" 
                                min="0" 
                                max="100"
                                aria-describedby="years-help"
                            >
                            <div id="years-help" class="help-text">How many years has your business been operating?</div>
                        </div>
                        
                        <div class="form-group">
                            <label for="growth-rate">Annual Growth Rate (%)</label>
                            <input 
                                type="number" 
                                id="growth-rate" 
                                name="growth-rate"
                                placeholder="Average annual growth" 
                                min="-50" 
                                max="200"
                                step="0.1"
                                aria-describedby="growth-help"
                            >
                            <div id="growth-help" class="help-text">Average annual revenue growth percentage</div>
                        </div>
                    </fieldset>
                    
                    <button 
                        type="submit" 
                        class="calculate-btn"
                        aria-describedby="calc-btn-help"
                    >
                        Calculate {industry.name} Value
                    </button>
                    <div id="calc-btn-help" class="help-text">Click to calculate your business valuation</div>
                </form>
                
                <!-- Results section with proper ARIA live region -->
                <div 
                    id="results" 
                    class="results" 
                    role="region" 
                    aria-live="polite" 
                    aria-labelledby="results-heading"
                    style="display: none;"
                >
                    <h3 id="results-heading">ðŸŽ¯ Your {industry.name} Valuation Results</h3>
                    <div class="result-item">
                        <strong>Seller's Discretionary Earnings (SDE):</strong>
                        <div class="result-value" id="sde-result" aria-live="polite">$0</div>
                    </div>
                    <div class="result-item">
                        <strong>Estimated Business Value Range:</strong>
                        <div class="result-value" id="value-range" aria-live="polite">$0 - $0</div>
                    </div>
                    <div class="result-item">
                        <strong>Industry Multiple Applied:</strong>
                        <div class="result-value" id="multiple-applied">{industry.multiple_range.min}x - {industry.multiple_range.max}x SDE</div>
                    </div>
                </div>
            </section>
            
            <section class="cta-section" role="complementary" aria-labelledby="cta-heading">
                <h3 id="cta-heading">ðŸŽ¯ Want a Professional {industry.name} Valuation Report?</h3>
                <p>Get a comprehensive 25-page professional valuation report with detailed analysis for just $39!</p>
                <a 
                    href="/professional-report" 
                    class="cta-btn" 
                    rel="nofollow"
                    aria-describedby="report-desc"
                >
                    Get Professional Report - $39
                </a>
                <div id="report-desc" class="sr-only">Order a detailed professional valuation report for $39</div>
                <a 
                    href="/consultation" 
                    class="cta-btn" 
                    rel="nofollow"
                    aria-describedby="consult-desc"
                >
                    Schedule Consultation
                </a>
                <div id="consult-desc" class="sr-only">Schedule a free consultation with our valuation experts</div>
            </section>
            
            <section aria-labelledby="understanding-heading">
                <h2 id="understanding-heading">ðŸŽ“ Understanding {industry.name} Valuation</h2>
                <p>{industry.name} valuation requires specialized knowledge of industry-specific factors. Our calculator uses the Seller's Discretionary Earnings (SDE) methodology, the gold standard for business valuations.</p>
                
                <div class="highlight-box" role="note" aria-labelledby="insight-heading">
                    <h4 id="insight-heading">ðŸ’¡ Key Insight</h4>
                    <p>{industry.name} businesses typically sell for {industry.multiple_range.min}x to {industry.multiple_range.max}x SDE, with variations based on specific business characteristics.</p>
                </div>
                
                <h3 id="characteristics-heading">Key {industry.name} Characteristics</h3>
                <ul role="list" aria-labelledby="characteristics-heading">
                    {industry.characteristics.map((characteristic, index) => (
                        <li role="listitem" key={index}>{characteristic}</li>
                    ))}
                </ul>
                
                <h3 id="factors-heading">Primary Valuation Factors</h3>
                <ul role="list" aria-labelledby="factors-heading">
                    {industry.key_factors.map((factor, index) => (
                        <li role="listitem" key={index}><strong>{factor}</strong></li>
                    ))}
                </ul>
            </section>
            
            <section class="cta-section" role="complementary" aria-labelledby="final-cta-heading">
                <h3 id="final-cta-heading">ðŸš€ Ready to Maximize Your {industry.name} Value?</h3>
                <p>Get expert analysis and strategic recommendations to optimize your business value.</p>
                <a 
                    href="/professional-report" 
                    class="cta-btn" 
                    rel="nofollow"
                    aria-label="Order professional valuation report for $39"
                >
                    Order Professional Report - $39
                </a>
                <a 
                    href="/consultation" 
                    class="cta-btn" 
                    rel="nofollow"
                    aria-label="Schedule free consultation with valuation experts"
                >
                    Free Consultation
                </a>
            </section>
        </main>
        
        <footer role="contentinfo" aria-label="Site footer">
            <p>&copy; 2025 TheValuationGenie. All rights reserved. | 
                <a href="/privacy" aria-label="Privacy Policy">Privacy Policy</a> | 
                <a href="/terms" aria-label="Terms of Service">Terms of Service</a> | 
                <a href="/contact" aria-label="Contact Us">Contact Us</a>
            </p>
        </footer>
    </div>
    
    <!-- Optimized JavaScript with proper error handling -->
    <script type="module">
        const industry = {industry};
        
        // Form validation and calculation
        function validateForm(formData) {
            const revenue = parseFloat(formData.get('annual-revenue')) || 0;
            const expenses = parseFloat(formData.get('operating-expenses')) || 0;
            
            if (revenue <= 0) {
                showError('annual-revenue', 'Please enter a valid revenue amount');
                return false;
            }
            if (expenses < 0) {
                showError('operating-expenses', 'Expenses cannot be negative');
                return false;
            }
            return true;
        }
        
        function showError(fieldId, message) {
            const field = document.getElementById(fieldId);
            field.setAttribute('aria-invalid', 'true');
            field.setAttribute('aria-describedby', fieldId + '-error');
            
            // Remove existing error
            const existingError = document.getElementById(fieldId + '-error');
            if (existingError) existingError.remove();
            
            // Add new error message
            const errorDiv = document.createElement('div');
            errorDiv.id = fieldId + '-error';
            errorDiv.className = 'error-message';
            errorDiv.setAttribute('role', 'alert');
            errorDiv.setAttribute('aria-live', 'assertive');
            errorDiv.textContent = message;
            field.parentNode.appendChild(errorDiv);
            
            field.focus();
        }
        
        function clearErrors() {
            document.querySelectorAll('[aria-invalid="true"]').forEach(field => {
                field.setAttribute('aria-invalid', 'false');
            });
            document.querySelectorAll('.error-message').forEach(error => error.remove());
        }
        
        function calculateValue(e) {
            e.preventDefault();
            clearErrors();
            
            const formData = new FormData(e.target);
            
            if (!validateForm(formData)) return;
            
            const revenue = parseFloat(formData.get('annual-revenue'));
            const ownerSalary = parseFloat(formData.get('owner-salary')) || 0;
            const expenses = parseFloat(formData.get('operating-expenses'));
            const yearsEstablished = parseFloat(formData.get('years-established')) || 0;
            const growthRate = parseFloat(formData.get('growth-rate')) || 0;
            
            const netIncome = revenue - expenses;
            const sde = netIncome + ownerSalary;
            
            let minMultiple = industry.multiple_range.min;
            let maxMultiple = industry.multiple_range.max;
            
            // Adjust multiples based on business factors
            if (yearsEstablished > 10) {
                minMultiple *= 1.1;
                maxMultiple *= 1.1;
            } else if (yearsEstablished < 3) {
                minMultiple *= 0.9;
                maxMultiple *= 0.9;
            }
            
            if (growthRate > 20) {
                minMultiple *= 1.2;
                maxMultiple *= 1.2;
            } else if (growthRate < 0) {
                minMultiple *= 0.8;
                maxMultiple *= 0.8;
            }
            
            const minValue = sde * minMultiple;
            const maxValue = sde * maxMultiple;
            
            // Update results with accessibility announcements
            const sdeElement = document.getElementById('sde-result');
            const rangeElement = document.getElementById('value-range');
            
            sdeElement.textContent = '$' + sde.toLocaleString();
            rangeElement.textContent = '$' + Math.round(minValue).toLocaleString() + ' - $' + Math.round(maxValue).toLocaleString();
            
            const resultsEl = document.getElementById('results');
            resultsEl.style.display = 'block';
            resultsEl.setAttribute('aria-hidden', 'false');
            
            // Announce results to screen readers
            const announcement = document.createElement('div');
            announcement.setAttribute('aria-live', 'assertive');
            announcement.setAttribute('aria-atomic', 'true');
            announcement.className = 'sr-only';
            announcement.textContent = `Calculation complete. Your SDE is ${sde.toLocaleString()} dollars. Estimated value range is ${Math.round(minValue).toLocaleString()} to ${Math.round(maxValue).toLocaleString()} dollars.`;
            document.body.appendChild(announcement);
            
            // Focus on results for keyboard users
            document.getElementById('results-heading').focus();
            
            // Remove announcement after screen readers have processed it
            setTimeout(() => {
                if (announcement.parentNode) {
                    announcement.parentNode.removeChild(announcement);
                }
            }, 1000);
        }
        
        // Enhanced event listeners with error handling
        try {
            const form = document.getElementById('calculator-form');
            if (form) {
                form.addEventListener('submit', calculateValue, { passive: false });
            }
            
            // Preload critical resources on idle
            if ('requestIdleCallback' in window) {
                requestIdleCallback(() => {
                    const link = document.createElement('link');
                    link.rel = 'prefetch';
                    link.href = '/professional-report';
                    document.head.appendChild(link);
                }, { timeout: 2000 });
            }
            
        } catch (error) {
            console.error('Calculator initialization error:', error);
        }
    </script>
    
    <!-- Additional CSS for accessibility -->
    <style>
        .help-text {
            font-size: 0.875rem;
            color: #666;
            margin-top: 4px;
        }
        
        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 4px;
            font-weight: 600;
        }
        
        .required::after {
            content: '';
        }
        
        input:invalid {
            border-color: #dc3545;
        }
        
        input:valid {
            border-color: #28a745;
        }
        
        /* Focus indicators */
        a:focus, button:focus, input:focus, select:focus {
            outline: 2px solid #1e3c72;
            outline-offset: 2px;
        }
        
        /* High contrast mode support */
        @media (prefers-contrast: high) {
            .calculate-btn {
                border: 2px solid currentColor;
            }
        }
        
        /* Reduced motion support */
        @media (prefers-reduced-motion: reduce) {
            .calculate-btn {
                transition: none;
            }
            
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
        
        /* Dark mode support */
        @media (prefers-color-scheme: dark) {
            .help-text {
                color: #aaa;
            }
        }
        
        /* Layout stability improvements */
        .calculator-section {
            min-height: 600px;
            contain: layout style;
        }
        
        .results {
            min-height: 200px;
        }
        
        .form-group {
            contain: layout;
        }
    </style>
</body>
</html>
